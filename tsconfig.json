{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "dist/src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": false
    },
    "exclude": [
      "../node_modules"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.json",
      "credential.json"
    ]
}
