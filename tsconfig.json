{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "./dist/src/main/",
        "strict": true,
        "declaration": true,
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": false
    },
    "exclude": [
        "node_modules",
        "src/test"
    ],
    "include": [
        "src/main/**/*.ts",
        "src/main/**/*.json"
    ]
}
