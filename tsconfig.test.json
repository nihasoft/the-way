{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": false
    },
    "exclude": [
        "node_modules",
        "src/main"
    ],
    "include": [
        "src/test/**/*.ts",
        "src/test/**/*.json"
    ]
}
