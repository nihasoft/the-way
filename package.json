{
    "name": "@nihasoft/the-way",
    "version": "0.6.7",
    "description": "We are a framework to help the development life to be better.",
    "main": "dist/src/main/index.js",
    "types": "dist/src/main/index.d.ts",
    "site": "https://nihasoft.github.io/the-way/",
    "homepage": "https://nihasoft.github.io/the-way/",
    "scripts": {
        "test": "jest --silent --no-cache --properties=./src/test/resources/application-test.properties.yml --i --verbose --collectCoverage",
        "test-no-silent": "jest --no-cache --properties=./src/test/resources/application-test.properties.yml --i --verbose --collectCoverage",
        "test-with-log": "jest --no-cache --properties=./src/test/resources/application-test.properties.yml --i --verbose > test.log 2>&1",
        "lint": "eslint . --ext .ts",
        "build": "yarn lint && tsc && yarn test && copyfiles ./src/main/core/configuration/application.properties.yml ./dist",
        "publish-version": "yarn build && npm publish"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "helmet": "^4.2.0",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "reflect-metadata": "^0.1.13",
        "swagger-ui-express": "^4.1.5",
        "yaml": "^1.10.0"
    },
    "peerDependencies": {
        "@types/node": "^14.14.10",
        "rxjs": "^6.6.3"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/cors": "^2.8.8",
        "@types/express": "^4.17.9",
        "@types/helmet": "^4.0.0",
        "@types/jest": "^26.0.15",
        "@types/js-yaml": "^3.12.5",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14.14.10",
        "@types/swagger-ui-express": "^4.1.2",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "eslint": "^7.14.0",
        "jest": "^26.6.3",
        "jest-html-reporter": "^3.3.0",
        "rxjs": "^6.6.3",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.0.0",
        "typescript": "^4.1.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nihasoft/the-way.git"
    },
    "bugs": {
        "url": "https://github.com/nihasoft/the-way/issues"
    },
    "donations": "https://www.paypal.com/donate/?token=Ov4xNE4bAuZWCSF9e0BjGy75laGShREyS7BDFs-oQSwMsGOVEzDZAq9VDVNKmaCewqrBUW&country.x=BR&locale.x=BR",
    "keywords": [
        "http decorator",
        "dependencies",
        "typescript dependency injection",
        "dependency injection",
        "@nihasoft/the-way",
        "the way",
        "node api",
        "node rest",
        "rest",
        "inject",
        "injections",
        "swagger",
        "express",
        "typescript decoratos",
        "typescript rest",
        "rest decorator",
        "express decorators",
        "decorator",
        "decorators",
        "@nihasoft"
    ],
    "author": "Hanor SÃ¡tiro Cintra <hanor.cintra@outlook.com>",
    "license": "MIT",
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/src/main/",
            "/src/test/environment",
            "/src/test/scenario",
            "/src/test/application",
            "/src/test/resources"
        ],
        "testRegex": ".test.ts",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "testTimeout": 30000,
        "reporters": [
            "default",
            [
                "./node_modules/jest-html-reporter",
                {
                    "pageTitle": "Test Report",
                    "outputPath": "./dist/src/test/test-report/index.html",
                    "includeFailureMsg": true,
                    "includeConsoleLog": true
                }
            ]
        ],
        "collectCoverage": true,
        "coverageDirectory": "./dist/src/test/corevage/",
        "collectCoverageFrom": [
            "src/main/**/*.ts",
            "!src/*/filesToExclude.ts"
        ],
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.test.json"
            }
        }
    }
}
